<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 flex items-center justify-center p-4">
  <div class="max-w-2xl w-full">
    <%!-- Progress Bar --%>
    <div class="mb-6">
      <div class="flex justify-between text-sm text-gray-600 mb-2">
        <span>Question <%= @current_index + 1 %> of <%= length(@questions) %></span>
        <span><%= round((@current_index / length(@questions)) * 100) %>% Complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-indigo-600 h-2 rounded-full transition-all duration-300"
             style={"width: #{(@current_index / length(@questions)) * 100}%"}>
        </div>
      </div>
    </div>

    <%!-- Confidence Display --%>
    <%= if @current_index >= 10 do %>
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="mb-4">
          <div class="flex justify-between items-center mb-2">
            <span class="text-sm font-medium text-gray-700">Confidence</span>
            <span class={"text-lg font-bold #{Scoring.confidence_color(@confidence)}"}>
              <%= @confidence %>%
            </span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-3">
            <div class={"h-3 rounded-full transition-all duration-500 #{String.replace(Scoring.confidence_color(@confidence), "text-", "bg-")}"}
                 style={"width: #{@confidence}%"}>
            </div>
          </div>
          <p class={"text-center mt-2 text-sm #{Scoring.confidence_color(@confidence)}"}>
            <%= @confidence_text %>
          </p>
        </div>

        <%= if length(@top_types) > 0 do %>
          <div class="border-t pt-4">
            <p class="text-sm font-medium text-gray-700 mb-3">Your likely type:</p>
            <%= for {type, score} <- @top_types do %>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm text-gray-600"><%= type_name({type, score}) %></span>
                <span class="text-sm font-medium text-indigo-600"><%= if score > 0, do: "+#{score}", else: score %></span>
              </div>
            <% end %>
          </div>
        <% end %>

        <%= if @can_skip do %>
          <div class="mt-4 text-center">
            <button phx-click="skip_to_results"
                    class="text-sm text-indigo-600 hover:text-indigo-800 underline">
              We're very confident! Skip to results â†’
            </button>
          </div>
        <% end %>
      </div>
    <% end %>

    <%!-- Question Card --%>
    <div class="bg-white rounded-lg shadow-lg p-8">
      <% question = Enum.at(@questions, @current_index) %>

      <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center leading-relaxed">
        <%= question.text %>
      </h2>

      <div class="space-y-3">
        <%= for {label, value} <- [
          {"Strongly Disagree", 1},
          {"Disagree", 2},
          {"Neutral", 3},
          {"Agree", 4},
          {"Strongly Agree", 5}
        ] do %>
          <button phx-click="answer"
                  phx-value-value={value}
                  class="w-full py-4 px-6 text-left rounded-lg border-2 border-gray-200 hover:border-indigo-500 hover:bg-indigo-50 transition-all duration-200 font-medium text-gray-700 hover:text-indigo-700">
            <%= label %>
          </button>
        <% end %>
      </div>
    </div>

    <div class="mt-4 text-center text-sm text-gray-500">
      Answer honestly for the most accurate results
    </div>
  </div>
</div>
